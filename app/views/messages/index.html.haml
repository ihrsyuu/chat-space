.header
  %p  チャットグループが作成されました

.sideblock
  .sideblock__info
    = link_to do
      = fa_icon 'pencil-square-o', class: 'icon'
    = link_to do
      = fa_icon 'cog', class: 'icon'
    %p  nickname
  .sideblock__group
    .sideblock__group__groupname
      %p  groupname
    .sideblock__group__message
      %p  message
.mainblock
  .mainblock__group_name
    .mainblock__group_name__editbutton
      %p  Edit
    .mainblock__group_name__groupname
      %p  groupname
    .mainblock__group_name__membername
      %p  Member
  .mainblock__chats
    .mainblock__chats__kuuhaku
    .mainblock__chats__chat
      .mainblock__chats__chat__nickname
        %p  nickname
      .mainblock__chats__chat__date
        %p  2000/00/00 00:00:00
      .mainblock__chats__chat__message
        %p  message
  .mainblock__form
    %form
      %input.mainblock__form__message
      .mainblock__form__mask
        %label.mainblock__form__mask__image
          = fa_icon 'picture-o', class: 'icon'
          %input.hidden{type: 'file'}
      %input.mainblock__form__submit{type: 'submit', value: 'Send'}
